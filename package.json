{
  "name": "paid-up",
  "description": "paidUp application",
  "version": "1.0.0",
  "author": "@paidUp company",
  "license": "private",
  "private": true,
  "main": "server/app.js",
  "dependencies": {
    "TDCore": "https://github.com/talosdigital/TDCore/tarball/master",
    "angular": "^1.5.5",
    "angular-cookies": "^1.5.5",
    "angular-resource": "^1.5.5",
    "angular-ui-router": "^0.2.18",
    "body-parser": "1.15.0",
    "browserify": "^13.0.0",
    "camelize": "^1.0.0",
    "composable-middleware": "0.3.0",
    "compression": "1.6.1",
    "cookie-parser": "1.4.1",
    "ejs": "2.4.1",
    "email-templates": "2.3.0",
    "errorhandler": "1.4.3",
    "express": "4.13.4",
    "lodash": "^4.11.0",
    "method-override": "2.3.5",
    "moment": "2.12.0",
    "morgan": "^1.7.0",
    "nodemailer": "^2.3.2",
    "paidup-commerce-connect": "^0.5.4",
    "paidup-schedule-connect": "^2.2.10",
    "pmx": "^0.6.1",
    "prerender-node": "^2.2.1",
    "q": "^1.4.1",
    "serve-favicon": "2.3.0",
    "winston": "^2.2.0"
  },
  "devDependencies": {
    "browser-sync": "^2.12.3",
    "connect-livereload": "^0.5.4",
    "faker": "3.1.0",
    "less": "^2.6.1",
    "less-plugin-clean-css": "^1.5.1",
    "nightwatch": "0.8.18",
    "npm-watch": "^0.1.4",
    "proxyquire": "^1.7.4",
    "sinon": "^1.17.3",
    "supertest": "1.2.0",
    "tape": "^4.5.1"
  },
  "engines": {
    "node": "4.4.2"
  },
  "watch": {
    "front:less": "client/src/style.less",
    "front:browserify" : "client/src/**/*.js"
  },
  "scripts": {
    "start": "node server/app.js",
    "test": "NODE_ENV=test ./node_modules/tape/bin/tape server/**/*.spec.js",
    "clean:dist": "rm -rf dist",
    "clean:build": "rm -rf build",
    "create:dist": "mkdir dist",
    "create:build": "mkdir build",
    "jenkins": "npm run clean:build && npm run create:build && npm test",
    "build:server": "cp -R server/ dist/server",
    "build:client": "browserify client/src/app.js -o client/js/bundle.js && npm run front:less && cp -R client/ dist/public",
    "build": "npm run clean:dist && npm run create:dist && npm run build:server && npm run build:client",
    "production": "NODE_ENV=production node dist/server/app.js",
    "front:browserify": "browserify client/src/app.js --verbose --debug --outfile client/js/bundle.js",
    "front:less": "lessc client/src/style.less client/css/style.css  --clean-css='--s1 --compatibility=ie8'",
    "front:livereload": "browser-sync start --proxy localhost:9000 --reload-delay 800 --files client !client/src",
    "watch": "npm-watch"
  },
  "config": {
    "blanket": {
      "pattern": [
        "varity/lib"
      ]
    }
  },
  "keywords": [
    "paidUp"
  ]
}
